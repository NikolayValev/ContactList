extends layout

block content
    .containter
        .jumbotron
            p.lead Contact Information Added to Database.
            .my-5
                p.m-4 Name: #{post.prefix} #{post.firstname} #{post.lastname}

                p.m-4 Address: #{post.street}, #{post.city}, #{post.state}, #{post.zip}

                p.m-4 #{post.contactbyphone ? 'Contact by Phone' : ''} #{post.contactbymail ? 'Contact by Mail' : ''}

                p.m-4 Contact by E-mail: #{post.contactbyemail ? post.email : 'no'}

    script.
        $('#main-nav').append( "<li class = 'nav-item'> <a class = 'nav-link' id = 'login'> Login </li> ")
        $('#login').attr('href', 'login')